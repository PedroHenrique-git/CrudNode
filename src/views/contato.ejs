<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container-home">
    <h1>Contato</h1>

    <%- include('includes/messages')  %> 

    <div class="form-group">
        <p>Crie ou edite seu contato abaixo:</p>

        <% if(contato.id) { %> 
            <form class="form-cadastro-contato" action="/contato/edit/<%= contato.id %>" method="POST">
        <% } else { %>
            <form class="form-cadastro-contato" action="/contato/register" method="POST">
        <% } %> 
            <input type="hidden" name="_csrf" value=<%= csrfToken %> >

            <div class="form-group">
                <label>Nome</label>
                <input value="<%= contato.nome %>" type="text" name="nome">
            </div>

            <div class="form-group">
                <label>Sobre Nome</label>
                <input value="<%= contato.sobrenome %>" type="text" name="sobrenome">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input value="<%= contato.email %>" type="email" name="email">
            </div>

            <div class="form-group">
                <label>Telefone</label>
                <input value="<%= contato.telefone %>" type="tel" name="telefone">
            </div>

            <button type="submit" >Salvar</button>
        </form>
    </div>

</div>

<%- include('includes/footer.ejs') %> 
